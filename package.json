{
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "scripts": {
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install",
    "dev": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "start-server": "node server/server.js",
    "start-client": "cd client && npm start"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  }
}
